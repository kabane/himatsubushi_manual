<h2>コンテンツ一覧</h2>

<%= search_form_for @q do |f| %>

  <%= f.label 'ワード' %>
  <%= f.search_field :title_or_description_cont %>

  <%= f.label 'カテゴリー' %>
  <%= f.collection_select :categories_id_eq, @categories, :id, :name, include_blank: '指定なし' %>

  <%= f.submit %>
<% end %>

<ul>
  <% @contents.each do |content| %>
    <li>
      <%= link_to content.title, content_path(content)  %>
      <ul>
        <% if content.thumbnail.attached? %>
          <li><%= image_tag content.thumbnail %></li>
        <% end %>
        <li><%= content.description %></li>
      </ul>
    </li>
  <% end %>
</ul>
